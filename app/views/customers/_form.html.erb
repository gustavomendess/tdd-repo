<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br/>

  <%= f.label :email %>
  <%= f.text_field :email %> <br/>

  <%= f.label :phone %>
  <%= f.text_field :phone %> <br/>

  <%= f.label :smoker %>
  <%= f.select :smoker, [["Sim", 'Sim'], ["Não", 'Não']] %> <br/>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %> <br/>

  <%= f.submit action_name == 'new' ? 'Criar Cliente' : 'Atualizar Cliente' %>
<% end %>