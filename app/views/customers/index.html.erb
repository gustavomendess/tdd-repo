<% if flash[:notice] %>
  <p> <%= flash[:notice] %> </p>
<% end %>

<h1> Listando Clientes </h1>
<table>
  <thead>
  <th>Nome</th>
  <th>Email</th>
  <th>Telefone</th>
  <th>Fumante?</th>
  <th>Visualizar</th>
  <th>Editar</th>
  <th>Excluir</th>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.name %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <%= customer.phone %>
      </td>
      <td>
        <%= customer.smoker %>
      </td>
      <td>
        <%= link_to 'Visualizar', customer_path(customer.id) %>
      </td>
      <td>
        <%= link_to 'Editar', edit_customer_path(customer.id) %>
      </td>
      <td>
        <%= link_to 'Excluir', customer_path(customer.id),
                    method: :delete, data: { confirm: 'Tem certeza?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Novo Cliente', new_customer_path %>